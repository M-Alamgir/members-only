<p id="notice"><%= notice %></p>

<h1>All Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <div class="post-list">
        <h4 class="post-title"><%= post.title %></h4>
        <h6><%= post.body %></h6>
        <%= show_name(post) %>
      </div>
    <% end %>
    <br>
    <%= link_to '<button type="button">Create New Post</button>'.html_safe, new_post_path %>
  </tbody>
</table>

<br>
