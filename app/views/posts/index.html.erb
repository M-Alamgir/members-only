<p id="notice"><%= notice %></p>

<h1>All Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <div class="post-list">
        <h4 class="post-title"><%= post.title %></h4>
        <h6><%= post.body %></h6>
        <% if current_user %>
        <p class="post-title">posted by <%= post.user.name %></p>
        <% end %>
      </div>
    <% end %>

  </tbody>
</table>

<br>

