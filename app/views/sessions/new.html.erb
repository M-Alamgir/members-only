<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
    <div class="error">
        <%= flash[:error] %>
    </div>
    <div class="actions">

    <%= form.label :email %>
    <%= form.email_field :email %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "login" %>
    </div>
<% end %>